{% extends 'base.html.twig' %}

{% block title %}Hello EvenementController!
{% endblock %}

{% block body %}
	<style></style>

	<div align="right" style = "vertical-align: top"><a href="/evenement/new" >Ajouter un evenement</a></div>


	{{ form_start(formRecherche) }}

	{{ form_widget(formRecherche.recherche, {
	attr: {
		placeholder: "Recherchez un evenement"
	}
}) }}

	<button type="submit" class="btn btn-primary mt-2">Rechercher</button>

	{{ form_end(formRecherche) }}

		{% for evenements in evenement %}
			<section class="wrapper-card" style="display: flex;justify-content: center;">
				<div class="wrapper" style="display: flex;flex-direction: column;align-items: center;height: 300px;width: 508px">
					<h2>{{ evenements.titre }}</h2>
					<div class="description" style="display: flex;flex-direction: column;/* align-content: center; /align-items: center;">
						<img src="{{ evenements.image }}" alt="Image de {{ evenements.titre }}" class="img-fluid">
						<div>
							<div>Description : {{ evenements.description }}</div>
						</div>
					</div>
				</div>
			</section>
		{% endfor %}
		<a href="/evenement/show.html.twig">Prout</a>
{% endblock %}



