{% extends 'base.html.twig' %}

{% block title %}Hello ProfilController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

	<section class="row product">
		{% for profils in profil %}
				<product class="col-md-4 mx-auto text-center border border-dark mb-3 p-3 mt-3 mr-1">
                <h2>{{ products.nom }}</h2>
				<div class="description">
				<br>
					<img src="{{ products.image }}" alt="Image de {{ products.nom }}" class="img-fluid">
					<br>
					<div>Description : {{ products.description | raw }}</div>
					
					<br>
					
					<div>
					<div>Prix : {{ products.prix | raw }}</div>
					</div>
					<a href="{{ path('panier_add', {'id' : products.id}) }}" class="btn btn-primary mt-2">Ajouter au panier</a>
				</div>
			</product>
		{% endfor %}
	</section>
{% endblock %}
