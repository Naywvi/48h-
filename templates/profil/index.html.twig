					<img src="{{ profil.image }}" class="img-fluid">
					<br>
					<div>Email : {{ profil.email }}</div>
					<br>
					<div>
					<div>Vos commentaire : {{ profil.commentaire_id | raw }}</div>
					</div>
                    <div>
					<div>Vos evenement : {{ profil.evenement_id | raw }}</div>
					</div>
					<a href="{{ path('panier_add', {'id' : products.id}) }}" class="btn btn-primary mt-2">Ajouter au panier</a>
				</div>
			</product>
		{% endfor %}
	</section>
{% endblock %}
